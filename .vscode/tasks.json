  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "label": "cargo build",
      "command": "cargo",
      "args": [
        "+nightly",
        "build"
      ],
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "type": "cargo",
      "label": "cargo run",
      "command": "cargo",
      "args": [
        "+nightly",
        "run"
      ],
      "problemMatcher": [
        "$rustc"
      ]
    }
  ]
}